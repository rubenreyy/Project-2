<%- include("reusables/header"); -%>
<body>
    <div class="container my-4">
        <div class="row align-items-center">
            <div class="col-12 text-center">
                <h1 class="page-title">MLB</h1>
            </div>
        </div>
        <div class="search-bar my-4">
            <%- include("reusables/search"); -%>
        </div>

        <div class="row row-cols-1 row-cols-md-2 g-4">
            <div class="col">
                <div class="card custom-bg text-white">
                    <div class="card-header">
                        <h3>All Team Stats</h3>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Click to view all team stats.</p>
                        <button class="btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAllTeams" aria-expanded="false" aria-controls="collapseAllTeams">
                            Show Stats
                        </button>
                        <div class="collapse mt-2" id="collapseAllTeams">
                            <div class="card card-body bg-light text-dark">
                                <table class="table table-striped-columns">
                                    <thead>
                                        <th>Team</th>
                                        <th>W</th>
                                        <th>L</th>
                                        <!-- <th>PCT</th> -->
                                    </thead>
                                    <tbody class="table-group-divider">
                                        
                                        <% temp_all_teams.forEach(function(team) { %>
                                            <tr>
                                                <td><%= team.team_name %></td>
                                                <td><%= team.team_record.wins %></td>
                                                <td><%= team.team_record.losses %></td>
                                                <td><%= team.team_record.alt %></td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card custom-bg text-white">
                    <div class="card-header">
                        <h3>Top Player Stats</h3>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Click to view top player stats.</p>
                        <button class="btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTopPlayers" aria-expanded="false" aria-controls="collapseTopPlayers">
                            Show Stats
                        </button>
                        <div class="collapse mt-2" id="collapseTopPlayers">
                            <div class="card card-body bg-light text-dark">
                                <table class="table table-striped-columns">
                                    <thead>
                                        <tr>
                                            <th>Stat</th>
                                            <th>Name</th>
                                            <th>Score</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-group-divider">
                                        <th class="table-divider">Offense</th>
                                        <tr>
                                            <th>Batting AVG</th>
                                            <td><%= temp_top_players.offensive.batting_avg.name %></td>
                                            <td><%= temp_top_players.offensive.batting_avg.avg %></td>
                                        </tr>
                                        <tr>
                                            <th>HR</th>
                                            <td><%= temp_top_players.offensive.home_runs.name %></td>
                                            <td><%= temp_top_players.offensive.home_runs.hr %></td>
                                            
                                        </tr>
                                        <tr>
                                            <th>RI</th>
                                            <td><%= temp_top_players.offensive.runs_in.name %></td>
                                            <td><%= temp_top_players.offensive.runs_in.ri %></td>
                                            
                                        </tr>
                                        <th>Defense</th>
                                        <tr>
                                            <th>Pitching Wins</th>
                                            <td><%= temp_top_players.defensive.wins.name %></td>
                                            <td><%= temp_top_players.defensive.wins.w %></td>
                                            
                                        </tr>
                                        <tr>
                                            <th>ERI</th>
                                            <td><%= temp_top_players.defensive.earned_run_avg.name %></td>
                                            <td><%= temp_top_players.defensive.earned_run_avg.era %></td>
                                            
                                        </tr>
                                        <tr>
                                            <th>Saves</th>
                                            <td><%= temp_top_players.defensive.saves.name %></td>
                                            <td><%= temp_top_players.defensive.saves.sv %></td>
                                            
                                        </tr>
                                    </tbody>

                                </table> 
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card custom-bg text-white">
                    <div class="card-header">
                        <h3>#1 Team Stats</h3>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Click to view #1 team stats.</p>
                        <button class="btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTeam1" aria-expanded="false" aria-controls="collapseTeam1">
                            Show Stats
                        </button>
                        <div class="collapse mt-2" id="collapseTeam1">
                            <div class="card card-body bg-light text-dark">
                                   <table class="table table-bordered table-responsive table-hover table-striped-columns align-middle ">
                                    <thead>
                                        <tr>
                                            <th>Team</th>
                                            <th>Win</th>
                                            <th>Loss</th>
                                            <th>PCT</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-group-divider">
                                        <tr>
                                            <!-- implement the for loop here -->
                                            <td><%= temp_top_team_stats.team_name %></td>
                                            <td><%= temp_top_team_stats.team_record.wins %></td>
                                            <td><%= temp_top_team_stats.team_record.losses %></td>
                                            <td><%= temp_top_team_stats.team_record.alt %></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card custom-bg text-white">
                    <div class="card-header">
                        <h3>#1 Team Player Stats</h3>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Click to view #1 team player stats.</p>
                        <button class="btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTeam1Players" aria-expanded="false" aria-controls="collapseTeam1Players">
                            Show Stats
                        </button>
                        <div class="collapse mt-2" id="collapseTeam1Players">
                            <div class="card card-body bg-light text-dark">
                               <table class="table table-striped-columns">
                                    <thead>
                                        <th>Position</th>
                                        <th>Name</th>
                                        <th>Total</th>
                                    </thead>
                                    <tbody class="table-group-divider">
                                        <tr>
                                            <th>Offense</th>
                                            <td class="text-dark"><%= temp_team_player_stats.offense[0] %></td>
                                            <td><%= temp_team_player_stats.offense[1] %></td>
                                        </tr>
                                        <tr>
                                            <th>Defense</th>
                                            <td><%= temp_team_player_stats.defense[0] %></td>
                                            <td><%= temp_team_player_stats.defense[1] %></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
<%- include("reusables/footer"); -%>
