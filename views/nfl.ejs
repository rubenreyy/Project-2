<%- include("reusables/header"); -%>
<body>
    <div class="container my-4">
        <div class="row align-items-center">
            <div class="col-12 text-center">
                <h1 class="page-title">NFL</h1>
            </div>
        </div>
        <div class="search-bar my-4">
            <%- include("reusables/search"); -%>
        </div>

        <div class="row row-cols-1 row-cols-md-2 g-4">
            <div class="col">
                <div class="card custom-bg text-white">
                    <div class="card-header">
                        <h3>All Team Stats</h3>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Click to view all team stats.</p>
                        <button class="btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAllTeams" aria-expanded="false" aria-controls="collapseAllTeams">
                            Show Stats
                        </button>
                        <div class="collapse mt-2" id="collapseAllTeams">
                            <div class="card card-body bg-light text-dark">
                                <table class="table table-striped-columns">
                                    <thead>
                                        <th>Team</th>
                                        <th>W</th>
                                        <th>L</th>
                                        <th>T</th>
                                    </thead>
                                    <tbody class="table-group-divider">
                                        <% temp_all_teams.forEach(function(team) { %>
                                        <tr>

                                                <td><%= team.team_name %></td>
                                                <td><%= team.team_record.wins %></td>
                                                <td><%= team.team_record.losses %></td>
                                                <td><%= team.team_record.ties %></td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card custom-bg text-white">
                    <div class="card-header">
                        <h3>Top Player Stats</h3>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Click to view top player stats.</p>
                        <button class="btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTopPlayers" aria-expanded="false" aria-controls="collapseTopPlayers">
                            Show Stats
                        </button>
                        <div class="collapse mt-2" id="collapseTopPlayers">
                            <div class="card card-body bg-light text-dark">
                                <p>Top player stats content goes here. Placeholder content for demonstration purposes.</p>
                                <table class="table table-striped-columns">
                                    <tr>
                                        <th>Stat</th>
                                        <th>Name</th>
                                        <th>Yards</th>
                                    </tr>
                                    <tr>
                                        <th>Passing</th>
                                        <td><%= temp_top_players.offensive.passing.name %></td>
                                        <td><%= temp_top_players.offensive.passing.yards %></td>
                                    </tr>
                                    <tr>
                                        <th>Rushing</th>
                                        <td><%= temp_top_players.offensive.rushing.name %></td>
                                        <td><%= temp_top_players.offensive.rushing.yards %></td>

                                    </tr>
                                    <tr>
                                        <th>Receiving</th>
                                        <td><%= temp_top_players.offensive.receiving.name %></td>
                                        <td><%= temp_top_players.offensive.receiving.yards %></td>
                                        
                                    </tr>
                                    <tbody class="table-group-divider">
                                    <tr>
                                        <th>Tackles</th>
                                        <td><%= temp_top_players.defensive.tackles.name %></td>
                                        <td><%= temp_top_players.defensive.tackles.tackles %></td>
                                        
                                    </tr>
                                    <tr>
                                        <th>Sacks</th>
                                        <td><%= temp_top_players.defensive.sacks.name %></td>
                                        <td><%= temp_top_players.defensive.sacks.sacks %></td>
                                        
                                    </tr>
                                    <tr>
                                        <th>Interceptions</th>
                                        <td><%= temp_top_players.defensive.interceptions.name %></td>
                                        <td><%= temp_top_players.defensive.interceptions.int %></td>
                                        
                                    </tr>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card custom-bg text-white">
                    <div class="card-header">
                        <h3>#1 Team Stats</h3>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Click to view #1 team stats.</p>
                        <button class="btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTeam1" aria-expanded="false" aria-controls="collapseTeam1">
                            Show Stats
                        </button>
                        <div class="collapse mt-2" id="collapseTeam1">
                            <div class="card card-body bg-body-tertiary text-dark">
                                <table class="table table-bordered table-responsive table-hover table-striped-columns align-middle ">
                                    <thead>
                                        <tr>
                                            <th>Team</th>
                                            <th>Win</th>
                                            <th>Loss</th>
                                            <th>Tie</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-group-divider">
                                        <tr>
                                            <!-- implement the for loop here -->
                                            <td><%= temp_top_team_stats.team_name %></td>
                                            <td><%= temp_top_team_stats.team_record.wins %></td>
                                            <td><%= temp_top_team_stats.team_record.losses %></td>
                                            <td><%= temp_top_team_stats.team_record.ties %></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card custom-bg text-white">
                    <div class="card-header">
                        <h3>#1 Team Player Stats</h3>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Click to view #1 team player stats.</p>
                        <button class="btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTeam1Players" aria-expanded="false" aria-controls="collapseTeam1Players">
                            Show Stats
                        </button>
                        <div class="collapse mt-2" id="collapseTeam1Players">
                            <div class="card card-body bg-light text-dark">
                                <table class="table table-striped-columns">
                                    <thead>
                                        <th>Position</th>
                                        <th>Name</th>
                                        <th>Total</th>
                                    </thead>
                                    <tbody class="table-group-divider">
                                        <tr>
                                            <th>Offense</th>
                                            <td class="text-dark"><%= temp_team_player_stats.offense[0] %></td>
                                            <td><%= temp_team_player_stats.offense[1] %></td>
                                        </tr>
                                        <tr>
                                            <th>Defense</th>
                                            <td><%= temp_team_player_stats.defense[0] %></td>
                                            <td><%= temp_team_player_stats.defense[1] %></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
<%- include("reusables/footer"); -%>
